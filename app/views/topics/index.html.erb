<h1>Topics</h1>

<div class="row">
  <div class="col-md-8">
    <% @topics.each do |topic| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to topic.name, topic %> 
            <small>(<%= topic.posts.count %> posts)</small>
          </h4>
          <small class="truncate">
            <%= topic.description %>
          </small>
        </div>
      </div>
    <% end %>
      <%= will_paginate(@topics, :renderer => 'BootstrapPaginationHelper::LinkRenderer') %>
  </div>
  <div class="col-md-4">
    <% if policy(Topic.new).create? %>
      <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
