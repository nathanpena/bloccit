<% if policy(Vote.new).create? %>
<div class="pull-left vote-arrows">
  <div><%= link_to '', post_up_vote_path(post), method: :post, 
  class: "glyphicon glyphicon-chevron-up #{(current_user.voted(post) && current_user.voted(post).up_vote?) ? 'vote' : '' }" %>
  </div>
  <div><strong><%= post.points %></strong></div>
  <div><%= link_to '', post_down_vote_path(post), method: :post, class: "glyphicon glyphicon-chevron-down #{ (current_user.voted(post) && current_user.voted(post).down_vote?) ? 'vote' : '' }"%></div>
</div>
<% end %>