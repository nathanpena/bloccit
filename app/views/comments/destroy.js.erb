<% if @comment.destroyed? %>
  $('#comment-' +<%= @comment.id %>).fadeOut( 300, "linear" );
  $('.js-comments-count').html("<%= @comment.user.comments.count %> comments"); 
<% else  %>
  $('#comment-' +<%= @comment.id %>).prepend("<div class='alert alert-danger'><%= flash[:error] %></div>");
<% end %>